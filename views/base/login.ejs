<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/basenav.ejs') %>

<main>
    <h2>Sign In Page</h2>
    <form action="http://localhost:3000/login" method="post">
      <div class="container" style="border-style: double;">
        <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" name="uname" required value="<% if (editing) { %><%= product.username %><% } %>">

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required value="<% if (editing) { %><%= product.username %><% } %>">
        
        <label for="mode"><b>Sign In Mode</b></label><br>
        <input type="radio" name="mode" id="admin" value="admin" required>
        <label for="admin">Admin</label><br>
        <input type="radio" name="mode" id="seller" value="seller">
        <label for="seller">Seller</label><br>
        <input type="radio" name="mode" id="buyer" value="buyer">
        <label for="buyer">Buyer</label><br>
        <input type="radio" name="mode" id="delag" value="del_personnel">
        <label for="delag">Delivery Agent</label><br>
            
        <button type="submit" style="text-align: center;">Login</button>

          <div style="background-color:#f1f1f1;">
            <!-- <a href="#">Forgot password?</a><br> -->
            New User? <a href="/signup">Sign Up</a><br>
          </div>
      </div>
    </form>
</main>
<%- include('../includes/end.ejs') %>