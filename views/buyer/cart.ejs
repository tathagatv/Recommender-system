<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/grid_containers.css">
</head>

<body>
<%- include('../includes/buyernav.ejs') %>

<main>
    <form action="/buyer/sort">
      <label for="search">Search:</label>
      <input type="text" id="search" name="search" placeholder="Search our products">
      <input type="submit" value="Submit"><br><br>
    </form>

    <h1>Items added to Cart</h1>

    <form action="/buyer/placeorder" method="post">
        <input style="background-color: #FF8C00" id="<%= cart.uid %>" type="submit" name="Place Order" value="Place Order" >
    </form>


    <div class="tri-grid-container">
    <% for (var i = 0; i < cart.prods.length; i++) { %>
    <% product = cart.prods[i]; %>
        <div class="grid-item">
            <div class="buyer_cart">
                <div class="name" style="background-color: #fFf1e1;">
                    <h1>
                        <%= product.name %>
                    </h1>
                </div>
                <div class="image" style="background-color: #FFFFFF">
                    <img src="<%= product.image %>" height=140px width=140px  altt="<%= product.name%>">
                </div>
                <div class="seller">
                    Sold By <%= product.seller %>
                </div>
                <div class="cost">
                    Cost: â‚¹ <%= product.cost %> /-
                </div>
                <div class="quantity">
                    Quantity: <%= product.quantity %>
                </div>
                <div class="button">
                    <form action="/buyer/removefromcart" method="post">
                        <input style="background-color: #FFCCCC" id="<%= product.id %>" type="submit" name="removefromcart" value="Remove From Cart" >
                        <input value="<%= product.id %>" type="hidden" name="pid">
                    </form>
                </div>
            </div>
        </div>
    <% } %>
    </div>
</main>
<%- include('../includes/end.ejs') %>