<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/order.css">
<link rel="stylesheet" href="/css/grid_containers.css">
</head>

<body>
<%- include('../includes/buyernav.ejs') %>

<main>
    <form action="/buyer/sort">
      <label for="search">Search:</label>
      <input type="text" id="search" name="search" placeholder="Search our products">
      <input type="submit" value="Submit"><br><br>
    </form>

    <h1>Order History</h1>


    <div class="penta-grid-container">
    <% for (var i = 0; i < orders.length; i++) { %>
    <% order = orders[i]; %>
        <div class="grid-item">
            <div class="buyer_history">
                <div class="id" style="background-color: #fFf1e1; font-size: 1rem;">
                    <h1>
                        Order ID <%= order.orderid %>
                    </h1>
                </div>
                <div class="cost" style="font-size: 1rem;">
                    Cost: â‚¹ <%= order.totalcost %> /-
                </div>
                <div class="button">
                    <form action="/buyer/orderdetails" method="post">
                        <input type="hidden" name="o_id" value="<%= order.orderid %>">
                        <input type="hidden" name="totalcost" value="<%= order.totalcost %>">
                        <input style="background-color: #FF8C00" type="submit" name="openup" value="View details">
                    </form>
                </div>
            </div>
        </div>
    <% } %>
    </div>
</main>
<%- include('../includes/end.ejs') %>