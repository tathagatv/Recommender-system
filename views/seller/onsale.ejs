<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/grid_containers.css">
</head>

<body>
<%- include('../includes/sellernav.ejs') %>

<main>
    <form action="/seller/sort", method="post">
      <label for="search">Search:</label>
      <input type="text" id="search" name="search" placeholder="Search our products">
      <input type="submit" value="Submit"><br><br>
    </form>

    <h1>Product Catalogue</h1>


    <div class="tri-grid-container">
    <% for (var i = 0; i < prods.length; i++) { %>
    <% product = prods[i]; %>
        <div class="grid-item">
            <div class="seller_onsale">
                <div class="name" style="background-color: #fFf1e1;">
                    <h1>
                        <%= product.name %>
                    </h1>
                </div>
                <div class="image" style="background-color: #FFFFFF">
                    <img src="<%= product.image %>" height=140px width=140px  altt="<%= product.name%>">
                </div>
                <div class="cost">
                    Cost: â‚¹ <%= product.cost %> /-
                </div>
                <div class="rating">
                    Rating: <%= product.rating %>
                </div>
                <div class="category">
                    Category: <%= product.category %>
                </div>
                <div class="form">
                    <form action="/seller/addnew", method="post">
                      <label for="addnew">Enter New Quantity:</label>
                      <input type="number" id="addnew" name="addnew" placeholder="<%= product.quantity %>">
                      <input type="submit" value="Restock!" style="color: #FF8C00">
                    </form>
                </div>
            </div>
        </div>
    <% } %>
    </div>
</main>
<%- include('../includes/end.ejs') %>